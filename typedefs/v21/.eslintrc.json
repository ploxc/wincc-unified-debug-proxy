{
    "root": true,
    "env": {
        "browser": false,
        "es2021": true
    },
    "globals": {
        "HMIRuntime": "readonly",
        "Tags": "readonly",
        "Screen": "readonly",
        "Faceplate": "readonly",
        "UI": "readonly",
        "PlantModel": "readonly",
        "UserManagement": "readonly"
    },
    "rules": {
        "no-restricted-properties": [1, {
            "object": "HMIRuntime",
            "property": "Trace",
            "message": "Delete all HMIRuntime.Trace() after commissioning or write a comment in front if it is needed for the operator."
        }],
        "strict": [2, "never"],
        "no-var": 2,
        "prefer-const": 0,
        "no-shadow": 2,
        "no-shadow-restricted-names": 2,
        "no-unused-vars": [2, {
            "vars": "local",
            "args": "none"
        }],
        "no-use-before-define": 0,

        "no-undef": 2,
        "no-cond-assign": [2, "always"],
        "no-constant-condition": 1,
        "no-dupe-keys": 2,
        "no-duplicate-case": 2,
        "no-empty": 2,
        "no-ex-assign": 2,
        "no-extra-boolean-cast": 0,
        "no-func-assign": 2,
        "no-inner-declarations": 2,
        "no-invalid-regexp": 2,
        "no-irregular-whitespace": 2,
        "no-obj-calls": 2,
        "no-sparse-arrays": 2,
        "no-unreachable": 2,
        "use-isnan": 2,
        "no-redeclare": 2,
        "no-template-curly-in-string": 2,
        "no-unused-expressions": 2,
        "valid-typeof": 2,
        "no-loss-of-precision": 2,

        "eqeqeq": 2,
        "no-self-compare": 2,
        "no-caller": 2,
        "no-eval": 2,
        "no-implied-eval": 2,
        "no-extend-native": 2,
        "no-new-func": 2,
        "no-new-wrappers": 2,
        "no-octal": 2,
        "no-octal-escape": 2,
        "no-proto": 2,
        "no-with": 2,
        "no-throw-literal": 2,
        "radix": 2,

        "consistent-return": 0,
        "curly": [2, "multi-line"],
        "default-case": 0,
        "dot-notation": [2, {
            "allowKeywords": true
        }],
        "guard-for-in": 0,
        "no-param-reassign": 0,
        "block-scoped-var": 0,

        "semi": 0,
        "quotes": 0,
        "indent": [1, 2, { "SwitchCase": 1 }],
        "vars-on-top": 0,
        "comma-dangle": 0,
        "eol-last": 0,
        "padded-blocks": 0,
        "no-trailing-spaces": 0,
        "no-multiple-empty-lines": 0,
        "space-before-blocks": 0,
        "space-before-function-paren": 0,
        "space-infix-ops": 0,
        "keyword-spacing": 0,
        "comma-spacing": 0,
        "comma-style": 0,
        "brace-style": 0,
        "key-spacing": 0,
        "semi-spacing": 0,
        "no-extra-semi": 0,
        "no-extra-parens": 0,
        "camelcase": 0,
        "new-cap": 0,
        "no-spaced-func": 0,
        "one-var": 0,
        "func-names": 0,
        "no-underscore-dangle": 0,
        "no-nested-ternary": 0,
        "no-new-object": 0,
        "wrap-iife": 0,
        "yoda": 0,
        "spaced-comment": 0,
        "no-floating-decimal": 0,
        "no-multi-str": 0,
        "no-sequences": 0,
        "no-lone-blocks": 0,
        "no-extra-bind": 0,
        "no-else-return": 0,
        "no-eq-null": 0,
        "no-fallthrough": 0,
        "no-native-reassign": 0,
        "no-new": 0,
        "no-script-url": 0,
        "no-console": 0,
        "no-debugger": 0,
        "no-alert": 0
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2021
    }
}
